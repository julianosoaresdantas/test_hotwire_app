<%# app/views/articles/_edit_title_form.html.erb %>
<%# Expects `local: { article: article }` %>

<%= form_with(model: article, url: article_path(article), method: :patch, data: { turbo_frame: "article_#{article.id}_title" }) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.submit "Update Title" %>
    <a href="<%= article_path(article) %>" data-turbo-frame="article_<%= article.id %>_title">Cancel</a>
  </div>
<% end %>